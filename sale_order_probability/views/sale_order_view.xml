<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="sale_order_probability_tree" model="ir.ui.view">
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_tree" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='user_id']" position="after">
				<field name="planned_percentage"/>
				<field name="probability_percentage"/>
			</xpath>
		</field>
	</record>
	
	<record id="quotation_probability_tree" model="ir.ui.view">
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_quotation_tree" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='user_id']" position="after">
				<field name="planned_percentage" />
				<field name="probability_percentage" />
			</xpath>
		</field>
	</record>
	
	
	<record id="sale_order_probability_form" model="ir.ui.view">
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//group[1]" position="after">
				<group>
					<group>
						<field name="planned_percentage" />
					</group>
				</group>
			</xpath>
		</field>
	</record>

</odoo>
