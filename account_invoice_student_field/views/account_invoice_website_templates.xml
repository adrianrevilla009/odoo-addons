<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="account_invoice_student_website_template" name="Website account invoice student"
        inherit_id="account.portal_my_invoices" customize_show="True">
        <xpath expr="//thead/tr[1]/th[1]" position="after">
            <th class="text-right">Student</th>
        </xpath>
        <xpath expr="//t[@t-foreach='invoices']/tr[1]/td[1]" position="after">
            <td class="text-right"><span t-field="invoice.child_id"/></td>
        </xpath>
    </template>
</odoo>
