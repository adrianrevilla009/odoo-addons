<odoo>

 <template id="assets_frontend"
  inherit_id="website.assets_frontend" name="Adding files">
  <xpath expr="." position="inside">
   <script type="text/javascript"
    src="/website_product_list_format/static/src/js/website.js"></script>
   <link rel="stylesheet"
    href="/website_product_list_format/static/src/css/style.css" />
  </xpath>
 </template>

 <template id="portal_product_list_format"
  name="Portal layout : product list shop format"
  inherit_id="website_sale.products" priority="30">
  <xpath expr="//div[@id='products_grid']" position="inside">
   <t t-if="search_count > 0">
    <div class="row" id="product_list_header">
     <b>Product</b>
     <b>Description</b>
     <b>Quantity</b>
     <b>Published</b>
    </div>
   </t>
  </xpath>
 </template>

 <template id="portal_product_item_format"
  name="Portal layout : product item shop format"
  inherit_id="website_sale.products_item" priority="30">
  <xpath expr="//section[1]" position="inside">
   <div class="text-center td-qty">
    <div class="css_quantity input-group mx-auto oe_website_spinner">
     <div class="input-group-prepend">
      <a t-attf-href="#"
       class="btn btn-link js_add_cart_json d-none d-md-inline-block"
       aria-label="Remove one" title="Remove one">
       <i class="fa fa-minus"></i>
      </a>
     </div>
     <input type="text" class="js_quantity form-control quantity"
      value="0" name="quant" />
     <div class="input-group-append">
      <a t-attf-href="#"
       class="btn btn-link float_left js_add_cart_json d-none d-md-inline-block"
       aria-label="Add one" title="Add one">
       <i class="fa fa-plus"></i>
      </a>
     </div>
    </div>
   </div>
  </xpath>
 </template>

</odoo>